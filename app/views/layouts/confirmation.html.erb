<% content_for(:template_name) { "question" } %>
<% content_for :content do %>
  <div class="slab">
    <main class="form-card form-card--transition">
      <div class="form-card__header form-card__header--confirmation">
        <div class="emoji emoji--med emoji--checkmark with-padding-small"></div>
        <h1 class="form-card__title"><%= yield :card_title %></h1>
        <p class="text--help"><%= yield :card_help %></p>
      </div>

      <div class="form-card__content">
        <%= yield :card_body %>
      </div>

      <% if content_for? :card_footer %>
        <div class="form-card__footer">
          <%= yield :card_footer %>
        </div>
      <% end %>
    </main>
  </div>
<% end %>